/* pages/takeOut/remark/remark.wxss */

.horseMan {
  background: white;
  border-bottom: 1px #e3e3e3 solid;
  width: 95%;
  height: 500rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

page {
  background: #f8f8f8;
}

.remarkPage {
  display: flex;
  flex-direction: column;
}

.horseManImg {
  display: flex;
  flex-direction: column;
  width: 100rpx;
  height: 100rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.baseDesc {
  display: flex;
  flex-direction: row;
}

.horseManDetail {
  margin-top: 20rpx;
}

.time {
  margin-top: 28rpx;
  font-size: 12px;
}

.logo {
  margin-left: 50rpx;
  background: rgb(62, 162, 219);
  font-size: 12px;
}

.tail {
  margin-left: 170rpx;
  color: #b1b1b1;
}

.star {
  width: 54rpx;
  height: 100rpx;
  text-align: center;
  margin-right: 50rpx;
}

.star image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 30rpx;
}

.emoji image {
  width: 100rpx;
  height: 100rpx;
  margin-top: 80rpx;
  margin-right: 80rpx;
}

.emoji {
  width: 100%;
  margin-left: 50rpx;
  margin-top: 100rpx;
}

.score .right .rtxt {
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 15rpx;
  color: #c00;
  font-weight: bold;
}

.left {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.shopDetail {
  margin-top: 50rpx;
}

.right {
  display: flex;
  flex-direction: row;
  margin-left: 120rpx;
  margin-top: 0rpx;
}
.rtxt{
  margin-left:290rpx;
}
.note-text{
  width:95%;
  font-size:12px;
  background:#F2F2F2;
  padding:10px;
  height:80px;
}
button{
  width: 100%;
  margin-top: 80rpx;
  background: orange;
}



